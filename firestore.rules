rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla para la colección de cursos
    match /cursos/{cursosId} {
      // Permitir lectura a todos (temporal para diagnóstico)
      allow read: if true;
      // Permitir escritura solo si el usuario está autenticado
      allow write: if request.auth != null;
    }
    
    // Permitir lectura/escritura en todas las demás colecciones solo si el usuario está autenticado
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}