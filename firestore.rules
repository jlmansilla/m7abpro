rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla para la colección de cursos - permitir lectura pública
    match /cursos/{cursosId} {
      allow read: if true;
      allow write: if true; // Temporal para diagnóstico
    }
    
    // Reglas específicas para otras colecciones
    match /usuarios/{usuarioId} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir lectura/escritura en todas las demás colecciones solo si el usuario está autenticado
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}